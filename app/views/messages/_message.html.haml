.messages-area
  .messages-area__name-date
    .messages-area__name-date__name
      = message.user.name
    .messages-area__name-date__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .messages-area__comment
    - if message.content.present?
      %p.messages-area__comment__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?